-- Initial holborn-proxy.cabal generated by cabal init.  For further
-- documentation, see http://haskell.org/cabal/users-guide/

name:                holborn-proxy
version:             0.1.0.0
synopsis:            Reverse proxy
-- description:
author:              Tom Hunger
maintainer:          tehunger@gmail.com
-- copyright:
category:            Web
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  exposed-modules:   Holborn.Proxy.Config
                   , Holborn.Proxy.AuthJar
                   , Holborn.Proxy.HttpTermination

  -- other-modules:
  -- other-extensions:
  build-depends:       base >=4.8 && <5
                     , holborn-prelude
                     , warp >=3.2.1
                     , hoauth2 >=0.5.2
                     , unordered-containers
                     , stm
                     , hashable
                     , entropy
                     , base64-bytestring
                     , hoauth2 >=0.5.2
                     , wai
                     , http-reverse-proxy >=0.4
                     , http-client
                     , cookie
                     , bytestring
                     , http-types
                     , jose
                     , text
                     , aeson
                     , unordered-containers
                     , servant
                     , servant-server
                     , transformers
                     , network-uri

  hs-source-dirs:      lib
  default-language:    Haskell2010
  default-extensions:  NoImplicitPrelude
                     , OverloadedStrings
                     , NamedFieldPuns
                     , RecordWildCards
                     , GeneralizedNewtypeDeriving
                     , ScopedTypeVariables

executable holborn-proxy
  build-depends:       base >=4.8 && <5
                     , holborn-prelude
                     , holborn-proxy
                     , optparse-applicative
                     , http-client
                     , warp >=3.2.1
                     , warp-tls >=3.2.1
                     , wai-extra
                     , network-uri

  hs-source-dirs:      src
  ghc-options:         -Wall -Werror -threaded
  main-is:             holborn-proxy.hs
  default-language:    Haskell2010
  default-extensions:  NoImplicitPrelude
                     , OverloadedStrings
                     , NamedFieldPuns
                     , RecordWildCards
                     , GeneralizedNewtypeDeriving
                     , ScopedTypeVariables

test-suite holborn-proxy-tests
  type:                exitcode-stdio-1.0
  main-is:             Tests.hs
  build-depends:       base >=4.9 && <5
                     , holborn-prelude
                     , holborn-proxy
                     , tasty >= 0.10
                     , tasty-hunit >= 0.9.0
                     , tasty-quickcheck >= 0.8
                     , tasty-hspec >= 1.1.0
  hs-source-dirs:      tests
  ghc-options:         -Wall -eventlog
  default-language:    Haskell2010
  default-extensions:  NoImplicitPrelude
                     , OverloadedStrings
                     , NamedFieldPuns
                     , RecordWildCards
                     , GeneralizedNewtypeDeriving
                     , MonadFailDesugaring
