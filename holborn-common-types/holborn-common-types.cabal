build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  exposed-modules:     Holborn.JSON.User
                     , Holborn.JSON.Response
                     , Holborn.JSON.Browse
                     , Holborn.JSON.RepoMeta
                     , Holborn.JSON.Settings.SSHKeys
                     , Holborn.JSON.Settings.Profile
                     , Holborn.JSON.SSHRepoCommunication
                     , Holborn.Logging
                     , Holborn.API.Types
                     , Holborn.Auth
                     , Holborn.ServantTypes

  build-depends:       base >=4.8 && <5.0
                     , aeson >= 0.10
                     , attoparsec
                     , basic-prelude >= 0.3.13 && <0.6
                     , bcrypt
                     , errors
                     , process
                     , http-client
                     , bytestring
                     , time
                     , postgresql-simple
                     , entropy
                     , containers
                     , http-api-data
                     , servant
                     , servant-server
                     , http-media
                     , QuickCheck

  hs-source-dirs:      lib
  ghc-options:         -Wall
  default-language:    Haskell2010
  default-extensions:  NoImplicitPrelude
                     , OverloadedStrings
                     , NamedFieldPuns
                     , RecordWildCards
                     , GeneralizedNewtypeDeriving

test-suite holborn-common-types-test
  type:                exitcode-stdio-1.0
  default-language:    Haskell2010
  default-extensions:  NoImplicitPrelude
                     , OverloadedStrings
                     , NamedFieldPuns
                     , RecordWildCards
                     , GeneralizedNewtypeDeriving
  ghc-options:        -Wall -Werror -O2 -Wall -threaded -rtsopts -with-rtsopts=-N
  hs-source-dirs:     tests
  main-is:            Main.hs
  build-depends:      base >= 4.8 && < 5
                    , basic-prelude >= 0.5
                    , aeson >= 0.10
                    , tasty >= 0.11
                    , tasty-hunit
                    , tasty-quickcheck
                    , holborn-common-types
