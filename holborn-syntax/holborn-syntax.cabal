name:                holborn-syntax
version:             0.3.0.0
synopsis:            Syntax analysis library
homepage:            https://bitbucket.com/mumak/holborn
license:             AllRightsReserved
author:              Jonathan M. Lange and Thomas Hunger
maintainer:          jml@mumak.net
copyright:           Jonathan M. Lange and Thomas Hunger
category:            Language
build-type:          Simple
cabal-version:       >=1.10

library
  exposed-modules:     Holborn.Syntax
                     , Holborn.Syntax.Internal
                     , Holborn.Syntax.Types
                     , Holborn.Syntax.Scope
                     , Holborn.Syntax.Languages.Python
  build-depends:       base >=4.8 && <4.9
                     , basic-prelude >= 0.5 && <0.6
                     , highlighter2 >= 0.2 && <0.3
                     , errors >= 2.0
                     , text >= 1.2 && <1.3
                     , bytestring >= 0.10 && <0.11
                       -- minimum 0.5.2 to catch unicode bug fix
                     , language-python >= 0.5.2 && <0.6
                     , containers >= 0.5 && <0.6
                     , mtl >= 2.2 && <2.3
                     , pretty-error
  hs-source-dirs:      lib
  default-language:    Haskell2010
  default-extensions:  NoImplicitPrelude
                     , OverloadedStrings
                     , NamedFieldPuns
                     , RecordWildCards
                     , GeneralizedNewtypeDeriving
  ghc-options:         -Wall -Werror

Test-Suite holborn-test
  type:                exitcode-stdio-1.0
  main-is:             Tests.hs
  build-depends:       base >=4.8 && <4.9
                     , tasty
                     , tasty-hunit
                     , tasty-quickcheck
                     , basic-prelude
                     , holborn-syntax
  hs-source-dirs:      tests
  ghc-options:         -Wall -Werror
  default-language:    Haskell2010
  default-extensions:  NoImplicitPrelude
                     , OverloadedStrings
                     , NamedFieldPuns
                     , RecordWildCards
                     , GeneralizedNewtypeDeriving
