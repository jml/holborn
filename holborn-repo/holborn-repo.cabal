-- Initial holborn-repo.cabal generated by cabal init.  For further
-- documentation, see http://haskell.org/cabal/users-guide/

name:                holborn-repo
version:             0.1.0.0
-- synopsis:
-- description:
-- license:
author:              Tom Hunger and Jonathan M. Lange
maintainer:          tehunger@gmail.com
-- copyright:
-- category:
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  exposed-modules:     Holborn.Repo.HttpProtocol
                     , Holborn.Repo.RawProtocol
                     , Holborn.Repo.Config
                     , Holborn.Repo.Process
                     , Holborn.Repo.GitLayer
                     , Holborn.Repo.Browse
                     , Holborn.Repo.HtmlFormatTokens
                     , Holborn.Repo.RepoInit
  hs-source-dirs:      lib
  default-language:    Haskell2010
  default-extensions:  NoImplicitPrelude
                     , OverloadedStrings
                     , NamedFieldPuns
                     , RecordWildCards
                     , GeneralizedNewtypeDeriving
                     , MonadFailDesugaring

                     -- `threaded` because System.Process needs it for
                     -- certain functions (e.g. waiting for process)
                     -- `rtsopts` so we can print system stats (gc
                     -- time etc) when testing cloning.
  ghc-options:         -Wall -Werror
  build-depends:       base >=4.9 && <5
                     , basic-prelude >= 0.5 && <0.6
                     , servant-server >= 0.5
                     -- 0.1.4 doesn't work on ghc 8.0
                     , pipes-shell >= 0.2.0
                     , pipes-safe
                     , pipes-zlib
                     , wai
                     , warp
                     , pipes
                     , http-types
                     , blaze-builder
                     , bytestring
                     , network >= 2.5
                     , pipes-network
                     , pipes-aeson
                     , text
                     , aeson >=0.9
                     , pipes-parse
                     , mtl
                     , pipes-bytestring
                     , process
                     , http-api-data
                       -- Git support
                     , gitlib
                     , gitlib-libgit2
                     , tagged
                     , bytestring
                     , errors
                     , transformers
                     , holborn-syntax >= 0.3
                       -- Web UI for browsing git
                     , servant-blaze >= 0.5
                     , blaze-markup
                     , blaze-html
                     , conduit >=1.1
                     , conduit-combinators >=1.0
                     , holborn-common-types
                     , directory

executable holborn-repo
  main-is:             Main.hs
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:         -Wall -Werror -threaded -rtsopts
  default-extensions:  NoImplicitPrelude
                     , OverloadedStrings
                     , NamedFieldPuns
                     , RecordWildCards
                     , GeneralizedNewtypeDeriving
                     , MonadFailDesugaring
  build-depends:       base >=4.9 && <5.0
                     , basic-prelude >= 0.3.13 && <0.6
                     , holborn-repo
                     , servant-server >= 0.5
                     , wai
                     , warp
                     , envparse >=0.2
                     , time >=1.5
                     , wai-extra
