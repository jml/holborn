name:                holborn-api
version:             0.1.0.0
-- synopsis:
-- description:
-- license:
license-file:        LICENSE
author:              Tom Hunger
maintainer:          tehunger@gmail.com
-- copyright:
-- category:
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  exposed-modules:     Holborn.API.Types
                     , Holborn.API.User
                     , Holborn.API.Api
                     , Holborn.JSON.User
                     , Holborn.JSON.Response
  -- other-modules:
  -- other-extensions:
  build-depends:       base >=4.8 && <5
                     , postgresql-simple
                     , text
                     , bytestring
                     , errors
                     , basic-prelude
                     , bcrypt
                     , aeson >= 0.10
                     , servant >=0.4 && <0.5
                     , servant-blaze >=0.4 && <0.5
                     , servant-server >=0.4 && <0.5
                     , blaze-html
                     , shakespeare
                     , either
                     , jwt


  hs-source-dirs:      lib
  default-language:    Haskell2010
  default-extensions:  NoImplicitPrelude
                     , OverloadedStrings


Test-Suite holborn-api-tests
  type:                exitcode-stdio-1.0
  main-is:             Tests.hs
  build-depends:       base >=4.8 && <5
                     , tasty >= 0.10
                     , tasty-hunit >= 0.9.0
                     , tasty-quickcheck >= 0.8
                     , basic-prelude >= 0.3.13
                     , holborn-api
                     , QuickCheck
                     , postgresql-simple
                     , errors

  hs-source-dirs:      tests
  default-language:    Haskell2010
  default-extensions:  NoImplicitPrelude
                     , OverloadedStrings


executable holborn-api-server
  main-is:             Main.hs
  hs-source-dirs:      holborn-api-server
  default-language:    Haskell2010
  build-depends:       base >=4.8 && <5
                     , basic-prelude >= 0.3.13 && <0.6
                     , blaze-html >= 0.8 && <0.9
                     , bytestring >= 0.10.0
                     , servant-server >= 0.4 && <0.5
                     , wai >= 3.0 && <3.1
                     , warp >= 3.1 && <3.2
                     , envparse >= 0.2
                     , postgresql-simple
                     , holborn-api
  default-extensions:  NoImplicitPrelude
                     , OverloadedStrings
